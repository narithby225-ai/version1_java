<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FF9800"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ›’ Sales &amp; Checkout"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
                
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewCart"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›’ Cart"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#F57C00"
                        app:cornerRadius="20dp"/>
                    
                    <TextView
                        android:id="@+id/tvCartCount"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-8dp"
                        android:layout_marginEnd="-8dp"
                        android:background="@drawable/bg_circle_orange"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
            
            <TextView
                android:id="@+id/tvTestInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick sales and customer management"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabIndicatorColor="#FF9800"
        app:tabSelectedTextColor="#FF9800"
        app:tabTextColor="#666666"/>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Products List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"/>

        <!-- Test Transactions List -->
        <LinearLayout
            android:id="@+id/layoutTestHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTestTransactions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearTestData"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="ðŸ—‘ï¸ Clear All Sales History"
                android:textColor="#E53935"
                app:strokeColor="#E53935"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Info Banner -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#FFF3E0"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="â„¹ï¸ Admin Only: Test sales without affecting real customer data. All test transactions can be viewed and cleared."
            android:textSize="12sp"
            android:textColor="#E65100"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
